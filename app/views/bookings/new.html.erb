<h1>New Booking</h1>

<%= form_with(url: bookings_path, method: "post", model: @booking) do |f| %>
  <%= "#{@flight.from_airport.code}
      to #{@flight.to_airport.code}
      on #{@flight.start_datetime.strftime('%Y-%m-%d at %H:%M')}" %>
  <%= f.fields_for :passengers do |passengers_form| %>
    <h3><%= "Passenger #{passengers_form.index + 1}" %></h3>
    <%= passengers_form.label :name %>
    <%= passengers_form.text_field :name %>

    <%= passengers_form.label :email %>
    <%= passengers_form.text_field :email %>
  <% end %>
  <br>
  <br>
  <%= f.hidden_field :flight_id, :value => @flight.id %>
  <%= f.submit "Create Booking" %>
<% end %>